{
    "name": "Vibratory Sight",
    "description": "You see entities around you through their vibrations.",
    "type": "origins:multiple",

    "tamed_sight": {
        "type": "origins:entity_glow",
        "bientity_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:owner"
                },
                {
                    "type": "origins:distance",
                    "comparison": "<=",
                    "compare_to": 48
                }
            ]
        },
        "use_teams": false,
        "red": 0.0,
        "blue": 0.0
    },

    "detection": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:area_of_effect",
            "radius": 100,
            "bientity_action": {
                "type": "origins:target_action",
                "action": {
                    "type": "origins:execute_command",
                    "command": "scoreboard players set @s jellysculk_counter 0"
                }
            },
            "bientity_condition": {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:owner",
                        "inverted": true
                    },
                    {
                        "type": "origins:target_condition",
                        "condition": {
                            "type": "origins:sneaking"
                        },
                        "inverted": true
                    },
                    {
                        "type": "origins:target_condition",
                        "condition": {
                            "type": "origins:in_tag",
                            "tag": "jellysculk:bypass_detection_check"
                        },
                        "inverted": true
                    },
                    {
                        "type": "origins:target_condition",
                        "condition": {
                            "type": "origins:fall_distance",
                            "comparison": "==",
                            "compare_to": 0
                        }
                    },
                    {
                        "type": "origins:target_condition",
                        "condition": {
                            "type": "origins:on_block",
                            "block_condition": {
                                "type": "origins:or",
                                "conditions": [
                                    {
                                        "type": "origins:in_tag",
                                        "tag": "minecraft:dampens_vibrations"
                                    },
                                    {
                                        "type": "origins:material",
                                        "material": "air"
                                    }
                                ]
                            }
                        },
                        "inverted": true
                    },
                    {
                        "type": "origins:target_condition",
                        "condition": {
                            "type": "origins:in_block",
                            "block_condition": {
                                "type": "origins:in_tag",
                                "tag": "minecraft:dampens_vibrations"
                            }
                        },
                        "inverted": true
                    },
                    {
                        "type": "origins:or",
                        "conditions": [
                            {
                                "type": "origins:target_condition",
                                "condition": {
                                    "type": "origins:moving"
                                }
                            },
                            {
                                "type": "origins:target_condition",
                                "condition": {
                                    "type": "origins:using_item"
                                }
                            }
                        ]
                    },
                    {
                        "type": "origins:or",
                        "conditions": [
                            {
                                "type": "origins:distance",
                                "comparison": "<=",
                                "compare_to": 16
                            },
                            {
                                "type": "origins:and",
                                "conditions": [
                                    {
                                        "type": "origins:distance",
                                        "comparison": "<=",
                                        "compare_to": 80
                                    },
                                    {
                                        "type": "origins:target_condition",
                                        "condition": {
                                            "type": "origins:block_in_radius",
                                            "radius": 9,
                                            "shape": "sphere",
                                            "block_condition": {
                                                "type": "origins:block_state",
                                                "property": "sculk_sensor_phase",
                                                "enum": "active"
                                            }
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    },

    "on_hit": {
        "type": "origins:target_action_on_hit",
        "entity_action": {
            "type": "origins:execute_command",
            "command": "scoreboard players set @s jellysculk_counter 0"
        }
    },

    "when_hit": {
        "type": "origins:attacker_action_when_hit",
        "entity_action": {
            "type": "origins:execute_command",
            "command": "scoreboard players set @s jellysculk_counter 0"
        }
    },

    "scoreboard_vision": {
        "type": "origins:entity_glow",
        "entity_condition": {
            "type": "origins:or",
            "conditions": [
                {
                    "type": "origins:scoreboard",
                    "objective": "jellysculk_counter",
                    "comparison": ">=",
                    "compare_to": 0
                },
                {
                    "type": "origins:in_tag",
                    "tag": "jellysculk:always_detect"
                }
            ]
        },
        "bientity_condition": {
            "type": "origins:owner",
            "inverted": true
        }
    },

    "cannot_see_others": {
        "type": "origins:prevent_entity_render",
        "entity_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:command",
                    "command": "execute unless score @s jellysculk_counter matches 0.."
                },
                {
                    "type": "origins:in_tag",
                    "tag": "jellysculk:bypass_detection_check",
                    "inverted": true
                }
            ]
        },
        "bientity_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:owner",
                    "inverted": true
                },
                {
                    "type": "origins:distance",
                    "comparison": ">=",
                    "compare_to": "0.1"
                }
            ]
        }
    }
}